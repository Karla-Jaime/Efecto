        <TextBox x:Name="txtRutaArchivo" HorizontalAlignment="Left" Height="23" Margin="24,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="351" Grid.ColumnSpan="3"/>
        <Button x:Name="btnExaminar" Content="ElegirAudio" HorizontalAlignment="Left" Margin="103.494,13,0,0" VerticalAlignment="Top" Width="75" Click="btnExaminar_Click" Grid.Column="2"/>
        <Button x:Name="btnPausa" Content="Pausa" HorizontalAlignment="Left" Margin="167,74,0,0" VerticalAlignment="Top" Width="70" Click="btnPausa_Click" Grid.ColumnSpan="3"/>
