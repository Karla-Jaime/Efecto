        <TextBlock HorizontalAlignment="Left" Margin="31,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2"><Run Text="Fade In"/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="33,132,0,0" TextWrapping="Wrap" Text="Duración:" VerticalAlignment="Top" FontSize="10
" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtDuracion" HorizontalAlignment="Left" Height="15" Margin="80,130,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="70" FontSize="10" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="188,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="3"><Run Text="Fade "/><Run Text="Out"/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="157,122,0,0" TextWrapping="Wrap" Text="Inicio:" VerticalAlignment="Top" FontSize="10 " Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtInicio" HorizontalAlignment="Left" Height="15" Margin="188,120,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="33"  FontSize="10" Grid.ColumnSpan="3"/>
        <TextBlock HorizontalAlignment="Left" Margin="29.494,122,0,0" TextWrapping="Wrap" Text="Duración:" VerticalAlignment="Top" FontSize="10 " Grid.Column="2"/>
        <TextBox x:Name="txtduracionFO" HorizontalAlignment="Left" Height="15" Margin="78.494,121,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="33"  FontSize="10" Grid.Column="2"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="33,160,0,0" TextWrapping="Wrap" Text="Delay:" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblOffsetDelay" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="96,199,0,0" TextWrapping="Wrap" Text="1500" VerticalAlignment="Top" FontSize="9" Width="49" TextAlignment="Right"/>
        <Slider x:Name="sldOffsetDelay" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="33,181,0,0" VerticalAlignment="Top" Width="117" Value="1500" ValueChanged="SldOffsetDelay_ValueChanged" Maximum="10000" TickFrequency="0"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="121,168,0,0" TextWrapping="Wrap" Text="Offset" VerticalAlignment="Top" FontSize="9"/>
      


    </Grid>
</Window>
